            ]
        },
        {
            "parameters": {
                "method": "POST",
                "url": "http://192.168.178.40:11434/api/chat",
                "sendBody": true,
                "contentType": "json",
                "bodyParameters": {
                    "parameters": [
                        {
                            "name": "model",
                            "value": "llama3:latest"
                        },
                        {
                            "name": "messages",
                            "value": "={{ [ { \"role\": \"system\", \"content\": \"You are a helpful assistant.\" }, { \"role\": \"user\", \"content\": $json.userMessage } ] }}"
                        },
                        {
                            "name": "stream",
                            "value": false
                        }
                    ]
                },
                "options": {}
            },
            "id": "ollama-request-node",
            "name": "Ollama Request",
            "type": "n8n-nodes-base.httpRequest",
            "typeVersion": 4.1,
            "position": [
                1100,
                200
            ],
            "onError": "continueErrorOutput"
        },
        {
            "parameters": {
                "jsCode": "const prev = $('Validate & Prep').first().json;\nconst reqId = prev.requestId;\nconst context = prev.context;\n\n// Handle HTTP Request Failure from onError: continueErrorOutput\nif (items[0].error) {\n  return [{\n    json: {\n      httpStatus: 502,\n      response: {\n        status: \"error\",\n        errorType: \"ollama_error\",\n        reply: \"LLM backend error\",\n        requestId: reqId,\n        meta: {\n             handledBy: \"WF-103\",\n             errorType: \"ollama_error\"\n        }\n      }\n    }\n  }];\n}\n\nconst ollama = items[0].json;\nlet reply = \"No reply from model.\";\n\nif (ollama.message && ollama.message.content) {\n  reply = ollama.message.content;\n}\n\nreturn [{\n  json: {\n    httpStatus: 200,\n    response: {\n      status: \"ok\",\n      reply: reply,\n      requestId: reqId,\n      meta: {\n        handledBy: \"WF-103\",\n        model: \"llama3:latest\",\n        uiMode: context.uiMode || null,\n        dayPhase: context.dayPhase || null,\n        timestamp: new Date().toISOString()\n      }\n    }\n  }\n}];"
            },
